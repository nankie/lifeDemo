<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

</head>
<body>
<h2>作者:<%=user.Nickname%></h2>
<a id="addChapter" href="javascript:void(0)">增加标题</a>
<a id="addSection" href="javascript:void(0)">增加段落</a>
<a id="addImage" href="javascript:void(0)">增加图片</a>
<div id="board"></div>
</body>

<script type="text/javascript" src="javascripts/jquery-2.1.3.js"></script>
<script type="text/javascript">
var chapter = '<div><a>标题：</a><input type="text" class="chapter"><a class="remove">X</a></div>'
var section = '<div><a>段落：</a><input type="text" class="section"><a class="remove">X</a></div>'
var image = '<div><a>图片：</a><input type="file" class="image"><a class="remove">X</a></div>'
$('#addChapter').click(function () {
    $('#board').append(chapter)
})
$('#addSection').click(function () {
    $('#board').append(section)
})
$('#addImage').click(function () {
    $('#board').append(image)
})
</script>
</html>